#Py calculator test

import unittest

class TestSum(unittest.TestCase):

    def test_add_int(self):
        self.assertEqual(add(1, 2), 3, "Should be 3")

    def test_add_float(self):
        self.assertEqual(add(1.5, 2), 3.5, "Should be 3.5")
        
    def test_subtract_int(self):
        self.assertEqual(subtract(1, 2), -1, "Should be -1")

    def test_subtract_float(self):
        self.assertEqual(subtract(1.5, 2), -0.5, "Should be -0.5")
        
    def test_multiply_int(self):
        self.assertEqual(multiply(1, 2), 2, "Should be 2")

    def test_multiply_float(self):
        self.assertEqual(multiply(1.5, 2), 3, "Should be 3")
    

if __name__ == '__main__':
    unittest.main()
